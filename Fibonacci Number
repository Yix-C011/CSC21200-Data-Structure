class Solution {
public:
    int fib(int n) {
        int output = 0;
        if (n == 0) { // Stopping case
            return 0; 
        }
        
        else if (n == 1) { // If n equal to 1 then it would add zero and one to the output.
            output += fib(n-1) + 1; // fib(1-1) + 1 = 0 + 1 = 1
        }
        
        else if ((n <= 30) && (n >= 2)) {  // If the input n is between [2, 30]
            output += fib(n-1) + fib(n-2); // Recursively call the two numbers before 
        }                                  // the input and add the sum to the output
        
        return output; // Returns final result
    }
};

// The Big-O Notation would be O(2^n) because for each call to fib(n), two recursive calls will be made.
// The space complexity is O(n), the worst case scenario will be if n == 30 and it will go 30 levels deep before reaching fib(1) and fib(0).
